<ul id="assets">
  <% unless @assets.empty? %>
    <% @assets.each do |asset| %>
      <li>
        <% link_to edit_admin_asset_path(asset) do %>
          <%= asset_icon(asset, 120) %>
          <span class="id">ID: <%= asset.id %></span>
          <span class="caption"><%= asset %></span>
        <% end %>
        <%= link_to_remove(asset) %>
      </li>
    <% end %>
  <% else %>
  <li class='empty'>No Assets</li>
  <% end %>
</ul>
